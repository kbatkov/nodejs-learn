html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
        block styles
    body
        header.header
            nav.header__nav
                ul.header__list
                    li.header__list-item
                        a.header__list-link(href="/", class=(path === '/' ? 'active' : '')) Shop
                    li.header__list-item
                        a.header__list-link(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : '')) Add Product
        block content