extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/card.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card
                        header.card__header
                            h1.card__title #{product.title}
                        div.card__image
                            img.card__image-img(src="https://upload.wikimedia.org/wikipedia/commons/b/b6/Gutenberg_Bible%2C_Lenox_Copy%2C_New_York_Public_Library%2C_2009._Pic_01.jpg")
                        div.card__content
                            h2.card__price $19.99
                            p.card__description A very interesting book about something
                        div.card__action
                            button.card__action-btn Add to Cart
        else
            h1 No Products