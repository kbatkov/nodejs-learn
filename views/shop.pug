extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/card.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card
                        header.card__header
                            h1.card__title #{product.title}
                        div.card__image
                            img.card__image-img(src="https://ichef.bbci.co.uk/news/976/cpsprodpb/177F1/production/_125814269_bookofdeerbbc.jpg")
                        div.card__content
                            h2.card__price $19.99
                            p.card__description A very interesting book about something
                        div.card__action
                            button.card__action-btn Add to Cart
        else
            h1 No Products